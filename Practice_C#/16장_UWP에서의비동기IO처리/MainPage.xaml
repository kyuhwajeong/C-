<Page
    x:Class="Section05.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Section05"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!--<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="0,10,0,0">-->
    <Grid Margin="0,10,0,0">
        <Button x:Name="button" Content="ファイルピッカーを使ってファイルにアクセスする" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="button_Click"/>
        <Button x:Name="button2" Content="ローカルフォルダにテキストファイルを出力する" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Click="button2_Click"/>
        <Button x:Name="button3" Content="ローカルフォルダにあるテキストファイルを読み込む" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Click="button3_Click"/>
        <Button x:Name="button4" Content="アプリをインストールしたフォルダからファイルを読み込む" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top" Click="button4_Click"/>
        <TextBlock x:Name="textBlock" Margin="5,140,5,5"/>
    </Grid>
</Page>
